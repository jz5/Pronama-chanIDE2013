<UserControl x:Class="Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Width="200"
             >
    <Grid>
        <Image Source="Images/base.png" Name="BaseImage" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="HighQuality" />
        <Image Source="Images/blink1.png" Name="FaceImage" Width="{Binding ElementName=BaseImage, Path=ActualWidth}" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="HighQuality" />
    </Grid>
</UserControl>
